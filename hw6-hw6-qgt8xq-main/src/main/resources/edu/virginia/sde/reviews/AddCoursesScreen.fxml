<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.AddCourseController" style="-fx-background-color: #f7f7f7;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="courseName" text="Course Details" style="-fx-text-fill: #2a2a2a; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #ffffff; -fx-padding: 5;"/>
    <GridPane VBox.vgrow="ALWAYS" hgap="15" vgap="15" alignment="CENTER">
        <Label text="Subject:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #2a2a2a; -fx-font-weight: bold;"/>
        <TextField fx:id="subjectField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-background-radius: 5px;"/>
        <Label text="Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #2a2a2a; -fx-font-weight: bold;"/>
        <TextField fx:id="numberField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-background-radius: 5px;"/>
        <Label text="Title:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #2a2a2a; -fx-font-weight: bold;"/>
        <TextField fx:id="titleField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-background-radius: 5px;"/>
    </GridPane>
    <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>
    <HBox spacing="15" alignment="CENTER">
        <Button text="Add" onAction="#handleAddAction" minWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px;"/>
        <Button text="Go Back" onAction="#handleGoBackAction" minWidth="100" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-background-radius: 5px;"/>
    </HBox>
</VBox>


